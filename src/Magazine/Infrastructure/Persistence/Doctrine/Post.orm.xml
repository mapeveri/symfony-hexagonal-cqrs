<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Magazine\Domain\Entity\Post" table="posts">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="title" type="string" unique="true" length="72" />
        <field name="content" type="text" nullable="true" />
        <field name="created" type="datetime" />
        <field name="updated" type="datetime" />
        <field name="hidden" type="boolean" />

        <many-to-one field="category" target-entity="Category" nullable="true" inversedBy="categorypost" fetch="EAGER">
            <join-columns>
                <join-column name="category_id" referenced-column-name="id"/>
            </join-columns>
        </many-to-one>

        <many-to-one field="user" target-entity="User" nullable="true" inversedBy="userpost" fetch="EAGER">
            <join-columns>
                <join-column name="user_id" referenced-column-name="id"/>
            </join-columns>
        </many-to-one>

        <one-to-many field="comments" target-entity="Comment" mapped-by="comment" />
    </entity>

</doctrine-mapping>