<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
                
    <entity name="App\Magazine\Domain\Entity\User" table="users">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="username" type="string" unique="true"/>
        <field name="email" type="string" unique="true"/>
        <field name="password" length="72"/>
        <field name="isActive" column="is_active" type="boolean"/>
        <field name="created" type="datetime" />
        <field name="updated" type="datetime" />

        <one-to-many field="posts" target-entity="Post" mapped-by="post" />
        <one-to-many field="comments" target-entity="Comment" mapped-by="comment" />
    </entity>
</doctrine-mapping>