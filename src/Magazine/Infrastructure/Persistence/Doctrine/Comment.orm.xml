<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Magazine\Domain\Entity\Comment" table="comments">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="content" type="text" nullable="true" />
        <field name="created" type="datetime" />
        <field name="updated" type="datetime" />
        <field name="hidden" type="boolean" />

        <many-to-one field="post" target-entity="Post" nullable="true" inversedBy="postcomment" fetch="EAGER">
            <join-columns>
                <join-column name="post_id" referenced-column-name="id"/>
            </join-columns>
        </many-to-one>

        <many-to-one field="user" target-entity="User" nullable="true" inversedBy="usercomment" fetch="EAGER">
            <join-columns>
                <join-column name="user_id" referenced-column-name="id"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>